<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>
    <header>
        <nav>
            <a href="{% if is_granted('ROLE_ADMIN') %}{{ path('admin_home') }}{% elseif is_granted('ROLE_EMPLOYEE') %}{{ path('employee_home') }}{% elseif is_granted('ROLE_VET') %}{{ path('vet_home') }}{% else %}{{ path('home') }}{% endif %}">
                <img src="{{ asset('images/zoo_arcada_logo.jpg') }}" alt="Zoo Arcadia Logo" class="logo">
            </a>
            <ul>
                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li><a href="{{ path('service_index') }}">Services</a></li>
                <li><a href="{{ path('habitat_index') }}">Habitats</a></li>
                <li><a href="{{ path('contact') }}">Contact</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_home') }}">Admin Dashboard</a></li>
                    <li><a href="{{ path('admin_manage_users') }}">Gérer Utilisateurs</a></li>
                {% elseif is_granted('ROLE_EMPLOYEE') %}
                    <li><a href="{{ path('employee_home') }}">Espace Employé</a></li>
                    <li><a href="{{ path('employee_manage_reviews') }}">Gérer Avis</a></li>
                {% elseif is_granted('ROLE_VET') %}
                    <li><a href="{{ path('vet_home') }}">Espace Vétérinaire</a></li>
                    <li><a href="{{ path('vet_reports') }}">Rapports</a></li>
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                {% else %}
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>
    <div>
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
</body>
</html>
