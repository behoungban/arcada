{% extends 'employee/base.html.twig' %}

{% block title %}Gestion de la Nourriture {% endblock %}

{% block body %}
    <h1>Gestion de la Nourriture</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Animal</th>
                <th>Type</th>
                <th>Quantit√©</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for nourriture in nourritures %}
                <tr>
                    <td>{{ nourriture.id }}</td>
                    <td>{{ nourriture.animal.name }}</td>
                    <td>{{ nourriture.type }}</td>
                    <td>{{ nourriture.quantity }}</td>
