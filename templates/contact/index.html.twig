{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <h1>Contacts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Sujet</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.name }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.subject }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}" class="btn btn-info">Voir</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}" class="btn btn-warning">Modifier</a>
                    {{ include('contact/_delete_form.html.twig', {'id': contact.id}) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_new') }}" class="btn btn-primary">Cr√©er un nouveau contact</a>
{% endblock %}
