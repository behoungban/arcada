{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <header>
            <nav>
                <a href="{% if is_granted('ROLE_ADMIN') %}{{ path('admin_home') }}{% elseif is_granted('ROLE_EMPLOYEE') %}{{ path('employee_home') }}{% elseif is_granted('ROLE_VET') %}{{ path('vet_home') }}{% else %}{{ path('home') }}{% endif %}">
                    <img src="{{ asset('images/zoo_arcada_logo.jpg') }}" alt="Zoo Arcadia Logo" class="logo">
                </a>
                <ul>
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li><a href="{{ path('service_index') }}">Services</a></li>
                    <li><a href="{{ path('habitat_index') }}">Habitats</a></li>
                    <li><a href="{{ path('contact') }}">Contact</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin_home') }}">Admin Dashboard</a></li>
                        <li><a href="{{ path('admin_manage_users') }}">Gérer Utilisateurs</a></li>
                    {% elseif is_granted('ROLE_EMPLOYEE') %}
                        <li><a href="{{ path('employee_home') }}">Espace Employé</a></li>
                        <li><a href="{{ path('employee_manage_reviews') }}">Gérer Avis</a></li>
                    {% elseif is_granted('ROLE_VET') %}
                        <li><a href="{{ path('vet_home') }}">Espace Vétérinaire</a></li>
                        <li><a href="{{ path('vet_reports') }}">Rapports</a></li>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        
        <main>
            <section class="presentation">
                <img src="{{ asset('images/zoo_arcada_main.jpg') }}" alt="Zoo Arcadia">
                <div class="presentation-text">
                    <h1>Bienvenue au Zoo Arcadia</h1>
                    <p>Découvrez la beauté de la nature et la diversité de la faune dans notre zoo. Profitez d'une expérience inoubliable avec nos habitats variés et nos services exceptionnels.</p>
                </div>
            </section>
            
            <section class="sections">
                <div class="section">
                    <h2>Nos Habitats</h2>
                    <ul>
                        {% for habitat in habitats %}
                            <li>{{ habitat.name }}: {{ habitat.description }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="section">
                    <h2>Nos Services</h2>
                    <ul>
                        {% for service in services %}
                            <li>{{ service.name }}: {{ service.description }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="section">
                    <h2>Animaux</h2>
                    <ul>
                        {% for habitat in habitats %}
                            {% for animal in habitat.animals %}
                                <li>{{ animal.name }} ({{ animal.species }}) - Habitat: {{ habitat.name }}</li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                </div>
                <div class="section">
                    <h2>Ce que nos visiteurs disent</h2>
                    <ul>
                        {% for avis in avis %}
                            <li>{{ avis.username }}: {{ avis.content }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </section>
        </main>

        <footer>
            <p>&copy; 2024 Zoo Arcadia. Tous droits réservés.</p>
        </footer>
    </div>
{% endblock %}
