{% extends 'base.html.twig' %}

{% block title %}Consultations{% endblock %}

{% block body %}
    <h1>Consultations</h1>

    <table>
        <thead>
            <tr>
                <th>Nom de l'animal</th>
                <th>Nombre de vues</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.animalName }}</td>
                <td>{{ consultation.viewCount }}</td>
                <td>
                    <a href="{{ path('consultation_show', {'id': consultation.id}) }}">Voir</a>
                    <a href="{{ path('consultation_edit', {'id': consultation.id}) }}">Modifier</a>
                    {{ include('consultation/_delete_form.html.twig', {'id': consultation.id}) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('consultation_new') }}">Cr√©er une nouvelle consultation</a>
{% endblock %}
